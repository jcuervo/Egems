<% if @leave_details.length >= 1: %>
  <table id="leave_details_tbl" class="table timesheets leave_details">
    <thead>
      <tr>
        <th>Leave Date</th>
        <th>Leave Type</th>
        <th>Details</th>
        <th>Day(s)</th>
        <th>Period</th>
        <th>Responder</th>
        <th>Status</th>
        <th>Response Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
<% else: %>
<div class="well">No data found.</div>
<% end %>
