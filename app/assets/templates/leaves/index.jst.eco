<h3>Leave Balances</h3>
<hr />
<% if @leaves.length >= 1: %>
  <table id="leaves_tbl" class="table timesheets leave_details">
    <thead>
      <tr>
        <th>Leave Type</th>
        <th>Allocated</th>
        <th>Consumed</th>
        <th>Pending</th>
        <th>Balance</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
  <br />
  <div id="leave_details_container"></div>
<% else: %>
  <div class="well">No data found.</div>
<% end %>
